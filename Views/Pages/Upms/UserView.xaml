<Page
   x:Class="MaterialDemo.Views.Pages.Upms.UserView"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:hc="https://handyorg.github.io/handycontrol"
   xmlns:local="clr-namespace:MaterialDemo.Views.Pages.Upms"
   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
   xmlns:upms="clr-namespace:MaterialDemo.ViewModels.Pages.Upms"
   Title="UserView"
   d:DataContext="{d:DesignInstance Type=upms:UserViewModel}"
   d:DesignHeight="450"
   d:DesignWidth="800"
   Background="{DynamicResource RegionBrush}"
   mc:Ignorable="d">
    <hc:TransitioningContentControl>
        <TabControl Style="{StaticResource TabControlInLine}">
            <DataGrid
               AutoGenerateColumns="False"
               HeadersVisibility="All"
               ItemsSource="{Binding ViewModel.DataList}"
               RowHeaderWidth="60"
               Style="{StaticResource DataGridBaseStyle}">
                <DataGrid.RowHeaderTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=DataGridRow}}" />
                    </DataTemplate>
                </DataGrid.RowHeaderTemplate>
                <DataGrid.Columns>
                    <DataGridTextColumn
                       Width="80"
                       Binding="{Binding Index}"
                       CanUserResize="False"
                       Header="Index"
                       IsReadOnly="True" />
                    <DataGridTemplateColumn Width="60" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image
                                   Width="32"
                                   Height="32"
                                   Source="{Binding ImgPath}"
                                   Stretch="Uniform" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                       Width="1"
                       Binding="{Binding Name}"
                       Header="Name" />
                    <DataGridCheckBoxColumn
                       Width="100"
                       Binding="{Binding IsSelected}"
                       CanUserResize="False"
                       Header="Selected" />
                    <DataGridComboBoxColumn
                       Width="100"
                       CanUserResize="False"
                       Header="Type"
                       SelectedValueBinding="{Binding Type}" />
                    <DataGridTextColumn
                       Width="1"
                       Binding="{Binding Remark}"
                       Header="Remark" />
                </DataGrid.Columns>
            </DataGrid>

        </TabControl>
    </hc:TransitioningContentControl>
</Page>

<Page x:Class="MaterialDemo.Views.Pages.Upms.UserView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:MaterialDemo.Views.Pages.Upms"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:upms="clr-namespace:MaterialDemo.ViewModels.Pages.Upms"
      Title="UserView"
      d:DataContext="{d:DesignInstance Type=upms:UserViewModel}"
      d:DesignHeight="450"
      d:DesignWidth="1000"
      Background="{DynamicResource RegionBrush}"
      mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Themes/Common/CommonGrid.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <hc:TransitioningContentControl>
        <hc:ScrollViewer IsInertiaEnabled="True">
            <Grid Background="Aqua">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="{DynamicResource ThemeBackground}" BorderThickness="1">
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <hc:TextBox Width="260"
                                    Margin="30,18,0,15"
                                    hc:FontWeight="Bold"
                                    hc:InfoElement.Placeholder="请输入..."
                                    hc:InfoElement.ShowClearButton="True"
                                    hc:InfoElement.Title="登录名"
                                    hc:InfoElement.TitlePlacement="Left"
                                    hc:InfoElement.TitleWidth="50"
                                    Foreground="{DynamicResource InputForeground}" />
                        <hc:TextBox Width="260"
                                    Margin="30,18,0,15"
                                    hc:FontWeight="Bold"
                                    hc:InfoElement.Placeholder="请输入..."
                                    hc:InfoElement.ShowClearButton="True"
                                    hc:InfoElement.Title="姓名"
                                    hc:InfoElement.TitlePlacement="Left"
                                    hc:InfoElement.TitleWidth="50" />

                        <GridSplitter Margin="20,0,50,0" />
                        <Button Foreground="{DynamicResource ButtonForegroundBrush}"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}"
                                ToolTip="Resource name: MaterialDesignRaisedButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Width="16"
                                                         Height="16"
                                                         VerticalAlignment="Center"
                                                         Kind="MagnifyExpand" />
                                <TextBlock Margin="10,0,0,0" FontSize="14" Text="查询" />
                            </StackPanel>
                        </Button>
                        <GridSplitter Margin="10,0,10,0" />
                        <Button Foreground="{DynamicResource ButtonForegroundBrush}"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}"
                                ToolTip="Resource name: MaterialDesignRaisedButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Width="16"
                                                         Height="16"
                                                         VerticalAlignment="Center"
                                                         Kind="Refresh" />
                                <TextBlock Margin="10,0,0,0" FontSize="14" Text="重置" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </hc:ScrollViewer>
    </hc:TransitioningContentControl>
</Page>

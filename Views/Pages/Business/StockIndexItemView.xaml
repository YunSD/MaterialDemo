<Page x:Class="MaterialDemo.Views.Pages.Business.StockIndex"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MaterialDemo.Views.Pages.Business"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:ui="clr-namespace:Wpf.Ui.Controls"
      xmlns:converters="clr-namespace:MaterialDemo.Utils.Converters"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      Title="StockIndex"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <converters:BaseFilePathConverter x:Key="BaseFilePathConverter" />
            
            <Style x:Key="ItemBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource ThemeBrush}"/>
                <Setter Property="Margin" Value="8"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource ThemeTableSelectedBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="20" HorizontalAlignment="Stretch" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Margin="40 0 0 0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left"   Text="操作面板"/>
            <TextBlock Grid.Column="1" x:Name="CurrentTime" Margin=" 0 0 40 0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Right"  Foreground="{StaticResource ThemeBrush}" Text=""/>
        </Grid>
        <Grid Grid.Row="1" Background="#EEEEEE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource MaterialDesignFloatingActionDarkButton}" Command="{Binding ViewModel.ToPreviousCommand}">
                <materialDesign:PackIcon Kind="ChevronLeft" Height="50" Width="50" />
            </Button>
            <Grid Grid.Column="1" ClipToBounds="True">
                <ItemsControl  ItemsSource="{Binding ViewModel.Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid HorizontalAlignment="Stretch" Columns="8" Rows="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border MouseLeftButtonDown="Border_MouseLeftButtonDown" Style="{StaticResource ItemBorder}">
                                <Grid VerticalAlignment="Stretch" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*"/>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <hc:ImageBlock Grid.Row="0" Source="{Binding StockMaterial.Image, Converter={StaticResource BaseFilePathConverter}}"/>
                                    <StackPanel Grid.Row="1" Margin="0 15 0 15">
                                        <TextBlock Grid.Row="0" FontSize="13" Padding="0 5 0 0">
                            <Run Text="物料名称：" />
                            <Run Text="{Binding StockMaterial.Name}" />
                                        </TextBlock>
                                        <TextBlock Grid.Row="1" FontSize="13" Padding="0 5 0 0">
                            <Run Text="物料编码：" />
                            <Run Text="{Binding StockMaterial.Code}" />
                                        </TextBlock>
                                        <TextBlock Grid.Row="2" FontSize="13" Padding="0 5 0 0">
                            <Run Text="规格：" />
                            <Run Text="{Binding StockMaterial.Model}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock FontSize="13" Text="当前库存:" VerticalAlignment="Center" Foreground="{StaticResource ThemeBrush}"/>
                                        <TextBlock FontSize="28" Text="{Binding Quantity}" VerticalAlignment="Center" Foreground="red" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            <Button Grid.Column="2" Style="{StaticResource MaterialDesignFloatingActionDarkButton}"  Command="{Binding ViewModel.ToNextCommand}">
                <materialDesign:PackIcon Kind="ChevronRight" Height="50" Width="50" />
            </Button>
        </Grid>
        <StackPanel Grid.Row="2" Margin="10 10 10 20" HorizontalAlignment="Right" Orientation="Horizontal">
            <TextBlock Margin="0 0 5 0" FontSize="24" Text="共"/>
            <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource ThemeBrush}" Text="{Binding ViewModel.PageCount}"/>
            <TextBlock Margin="5 0 40 0" FontSize="24" Text="页"/>
            <TextBlock Margin="0 0 5 0" FontSize="24" Text="当前第"/>
            <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource ThemeBrush}" Text="{Binding ViewModel.PageIndex}"/>
            <TextBlock Margin="5 0 40 0" FontSize="24" Text="页"/>
        </StackPanel>
    </Grid>

</Page>
